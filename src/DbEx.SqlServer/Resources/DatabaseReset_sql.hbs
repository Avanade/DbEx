-- Disable all constraints.
{{#each .}}
ALTER TABLE [{{Schema}}].[{{Name}}] NOCHECK CONSTRAINT ALL
{{/each}}

-- Delete data from all tables.
{{#each .}}
DELETE FROM [{{Schema}}].[{{Name}}]
{{/each}}

-- Reset identity column (where any).
{{#each .}}
  {{#each PrimaryKeyColumns}}
    {{#if IsIdentitySeeded}}
DBCC CHECKIDENT ('{{DbTable.Schema}}.{{DbTable.Name}}', RESEED, {{add IdentitySeed -1}});
    {{/if}}
  {{/each}}
{{/each}}

-- Re-enable all constraints.
{{#each .}}
ALTER TABLE [{{Schema}}].[{{Name}}] CHECK CONSTRAINT ALL
{{/each}}